<!DOCTYPE html>
<html>

<head>
	<%- include('../partials/head.ejs') %>
	<title>Vivero Federal: Nuevo tamaño</title>
	<link rel="stylesheet" href="/css/sizes/createSize.css">
</head>

<body>

	<%- include('../partials/header.ejs') %>

	<main>

		<section class="create">

			<!-- Título de la sección -->
			<h3 class="section-title">Crear tamaño</h3>

			<!-- Formulario -->
			<form class="new" action="/sizes/add" method="POST">

				<div class="data">

					<div class="field">
						<label for="name">Nombre del tamaño: </label>
						<input type="text" name="name" id="name" placeholder="Ej: XXS" value="<%= (locals.old && old.name) ? old.name : '' %>">
						<p class="live-error" id="name"></p>
					</div>

				</div>

				<!-- Errores -->
				<div class="errors">
					<% if (locals.errors) { %>
					<% errors.forEach(error => { %>
					<p class="error"><i class="fas fa-exclamation-circle"></i> <%= error.msg %></p>
					<% }) %>
					<% } %>
				</div>

				<button type="submit">Crear tamaño</button>

			</form>

		</section>

	</main>

	<%- include('../partials/footer') %>

</body>

<script src="https://unpkg.com/validator@latest/validator.min.js"></script>
<script src="/js/sizes/createSize.js"></script>

</html>