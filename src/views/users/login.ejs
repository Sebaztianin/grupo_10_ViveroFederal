<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Vivero Federal: Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="stylesheet" href="../css/login.css">
</head>

<body>

    <%- include('../partials/header.ejs') %>

        <main>
            <!--LOGIN-->
            <div>
                <form class="cart" action="/login" method="POST">

                    <section class="products">
                        <h3 class="section-title">Inicia sesión en tu cuenta</h3>

                        <!--Campos-->
                        <div>
                            <label for="usuario">Nombre de Usuario</label>
                            <input type="text" name="nombreDeUsuario" id="usuario" placeholder="Ej: CamiQuispe"
                                required></input>
                        </div>
                        <div>
                            <label for="pass">Contraseña</label>
                            <input type="password" name="clave" id="pass" placeholder="********" required></input>
                        </div>
                        <div class="sin_flex">
                            <label for="remember">Recordar mi contraseña</label>
                            <input type="radio" name="opcion" id="remember"></input>

                        </div>

                        <div>
                            <section class="submit">
                                <button type="submit" name="Inicia">INICIAR SESIÓN</button>
                                <a href="/users/login">
                                    <h5>¿Olvidaste tu contraseña?</h5>
                                </a>
                            </section>
                        </div>
                    </section>
                </form>
            </div>
            <!--REGISTRO-->
            <div>
                <form class="cart" action="/register" method="POST">

                    <section class="products">
                        <h3 class="section-title">Puedes registrarte aquí</h3>
                        <!--Campos-->
                        <div>
                            <label for="nombre">Nombre:</label>
                            <input type="text" name="name" id="nombre" required>
                        </div>
                        <div>
                            <label for="apellido">Apellido:</label>
                            <input type="text" name="Lastname" id="apellido" required>
                        </div>
                        <div>
                            <label for="email">Email:</label>
                            <input type="email" name="email" id="email" required>
                        </div>
                        <div>
                            <label for="pass">Contraseña:</label>
                            <input type="password" name="contraseña" id="pass" required>
                        </div>
                        <div>
                            <label for="confirmarPass">Confirma tu contraseña</label>
                            <input type="password" name="confirmarContraseña" id="confirmarPass" required>
                        </div>
                        <div>
                            <section class="submit">
                                <button type="sbmit" name="Inicia">REGISTRARME</button>
                            </section>
                        </div>

                    </section>
                </form>
            </div>
        </main>

        <%- include('../partials/footer.ejs') %>

</body>

</html>