<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head.ejs') %>
    <title>Vivero Federal: Login</title>
    <link rel="stylesheet" href="../css/users/login.css">
</head>

<body>

    <%- include('../partials/header.ejs') %>

 

    <!--LOGIN-->
        <main class="login">
                <h3 class="section-title">Inicia sesión en tu cuenta</h3>
                <form class="userOne" action="/login" method="POST">
                        <!--Campos-->
                        <div class="name">
                            <label for="usuario">Nombre de Usuario</label>
                            <input type="text" name="nombreDeUsuario" id="usuario" placeholder="Ej: CamiQuispe"
                                required="" ></input>
                        </div>
                        <div class="pass">
                            <label for="pass">Contraseña</label>
                            <input type="password" name="clave" id="pass" placeholder="********" required></input>
                        </div>
                        <div class="checkbox">
                            <label for="rememberMe">   Recordar mi contraseña</label>
                            <input type="checkbox" value="remember-me" id="rememberMe" name="rememberMe"></input>
                            </label>
                        </div>
                        <!--boton-->
                        <div>
                            <section class="submit">
                                <button type="submit" name="Inicia">INICIAR SESIÓN</button>
                                <a href="/users/login">
                                    <h5>¿Olvidaste tu contraseña?</h5>
                                </a>
                            </section>
                        </div>
                </form>
         </main>
               
           <br>
            <!-- REGISTRO -->
               <main class="register">
                 <h3 class="section-title">Puedes registrarte aquí</h3>
                    <form class="userTwo" action="/register" method="POST">
                        <!--Campos-->
                        <div class="name">
                            <label for="nombre">Nombre:</label>
                            <input type="text" name="name" id="nombre" required>
                        </div>
                        <div class="lastName">
                            <label for="apellido">Apellido:</label>
                            <input type="text" name="Lastname" id="apellido" required>
                        </div>
                        <div class="email">
                            <label for="email">Email:</label>
                            <input type="email" name="email" id="email" required>
                        </div>
                        <div class="pass">
                            <label for="pass">Contraseña:</label>
                            <input type="password" name="contraseña" id="pass" required>
                        </div>
                        <div class="confirmPass">
                            <label for="confirmarPass">Confirma tu contraseña</label>
                            <input type="password" name="confirmarContraseña" id="confirmarPass" required>
                        </div>
                        <!--boton-->
                        <div>
                            <section class="submit">
                                <button type="sbmit" name="Inicia">REGISTRARME</button>
                            </section>
                        </div>
                    </form>
                </main>
        <br>

        <%- include('../partials/footer.ejs') %>

</body>

</html>