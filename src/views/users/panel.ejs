<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head.ejs') %>
        <title>Vivero Federal: Login</title>
        <link rel="stylesheet" href="/css/users/panel.css">
</head>

<body>

    <%- include('../partials/header.ejs') %>

    <main>

        <section class="profile">

            <h3 class="section-title">Listado de usuarios</h3>

            <!-- Lista de usuarios -->
            <div class="list">

                <% for (i = 0; i < users.length; i++) { %>

                    <article>

                        <!-- Nombre y correo del usuario -->
                        <p class="user"><%= users[i].firstName + ' ' + users[i].lastName + ' - ' + users[i].email %></p>

                        <!-- BotÃ³n de editar -->
                        <a href="/users/editCategory/<%= users[i].id %>"><i class="fas fa-edit"></i></a>

                    </article>

                <% } %>

            </div>

        </section>

    </main>

    <%- include('../partials/footer.ejs') %>

</body>

</html>